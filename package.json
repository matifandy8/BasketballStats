{
  "name": "nba-2",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "build": "turbo run build",
    "lint": "eslint . --max-warnings=0 --debug",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "security:check": "npm audit --audit-level=moderate",
    "lint-staged": "lint-staged",
    "lhci:collect": "lhci collect --staticDistDir=./apps/frontend/dist",
    "lhci:assert": "lhci assert",
    "lhci:upload": "lhci upload --target=temporary-public-storage",
    "lhci:autorun": "npm run build && lhci autorun --upload.target=temporary-public-storage --collect.staticDistDir=./apps/frontend/dist"
  },
  "workspaces": [
    "apps/*"
  ],
  "packageManager": "npm@8.5.0",
  "devDependencies": {
    "@lhci/cli": "0.15.1",
    "@lhci/server": "0.15.1",
    "@types/react-dom": "19.1.9",
    "concurrently": "9.2.1",
    "husky": "9.1.7",
    "turbo": "2.5.6"
  },
  "dependencies": {
    "@tanstack/react-query": "5.87.1",
    "@types/react-slick": "0.23.13",
    "lint-staged": "16.1.6",
    "lucide-react": "0.542.0",
    "prettier": "3.6.2",
    "react-slick": "0.31.0",
    "sharp": "0.34.3",
    "slick-carousel": "1.8.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
